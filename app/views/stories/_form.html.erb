<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %><br>
  </div>

  <div class="field">
    <%= f.label "or enter a URL" %><br>
    <%= f.text_area :image_remote_url, input_html: {rows: "1" } %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, input_html: {rows: "3" } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
