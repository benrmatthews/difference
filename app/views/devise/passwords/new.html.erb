<% provide(:title, "Forgot your password?") %>
<h1>Forgot your password?</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form' }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>

      <%= f.submit "Send me reset password instructions", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>